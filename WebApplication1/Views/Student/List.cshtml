@model List<WebApplication1.Models.Student>
@{
    Layout = null; // Remove if you have a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Student Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .student-card {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }
        .student-card h2 {
            margin: 0 0 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Student Details</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="student-card">
                        <h2>ID: <span class="text-primary">@item.Id</span></h2>
                        <h3>Name: <span class="text-success">@item.Name</span></h3>
                        <p>Phone Number: <span class="text-muted">@item.phone_number</span></p>
                        <p>Email: <span class="text-muted">@item.email</span></p>
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                           
             

                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
